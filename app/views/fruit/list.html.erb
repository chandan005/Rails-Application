<% provide(:title, "Fruits")%>

<% if @fruits.blank? %>
<h4> There isn't any fruit currently in the system. </h4>
<% else %>
<h4> All Fruits </h4>

<div>
	<table id ="fruit_list">
		<thead>
			<tr>
				<th>S.N.</th>
				<th>Name</th>
				<th>Variety</th>
				<th>Color</th>
				<th>Plantation Name</th>
				<th>Plantation Location</th>
				<th>Created At</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<tr>
			<% @fruits.each do |c| %>
				<td>  </td>
				<td><%= c.name %></td>
				<td><%= c.variety %></td>
				<td><%= c.color %></td>
				<td><%= link_to c.plantation.name, {:controller => 'plantation', :action => 'show', :id => c.plantation_id}%></td>
				<td><%= c.plantation.location %>
				<td><%= c.created_at %></td>
				<td>
				<%= link_to "Edit", fruit_edit_path(:fruit_id => c.id)%> |
				<%= link_to "Delete", fruit_destroy_path(:fruit_id => c.id), data: {confirm: "Are you sure, you want to delete this item?."} %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	
</div>
<% end %>
<div class ="row">
	<div class ="col-sm-6 col-md-offset-3">
		<hr />
		<%= link_to "Add new fruit", {:controller => 'fruit', :action => 'new'}, class: "btn btn-primary btn-block"%>
		<br />
		<%= link_to "Plantation List", {:controller => 'plantation', :action => 'list'}, class: "btn btn-primary btn-block"%>
		<br />
		<%= link_to "Main Page", {:controller => 'main', :action => 'index'}, class: "btn btn-primary btn-block"%>
	</div>
</div>



<% provide(:title, "Create Plantation") %>

<h1> Add new Plantation </h1>

<div class ="row">
	<div class ="col-md-6 col-md-offset-3">
		<%= form_for @plantation, :url => {:action => 'create', :id => @plantation} do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :location %>
			<%= f.text_field :location, class: 'form-control' %>

			<%= f.submit "Create Plantation", class: "btn btn-success" %>
		<% end %>

		<hr />

		<%= link_to "Cancel", {:action => 'list'}, class: "btn btn-danger btn-block" %>
		<br />
		<%= link_to "Main Page", {:controller => 'main', :action => 'index'}, class: "btn btn-primary btn-block"%>

	</div>
</div>

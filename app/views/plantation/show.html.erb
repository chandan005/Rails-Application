			<tr>
			<% @vegetables.each do |v| %>
				<td></td>
				<td><%= v.name %></td>
				<td><%= v.variety %></td>
				<td><%= v.color %></td>
				<td><%= v.time %></td>
				<td><%= @plantation.name%></td>
				<td><%= @plantation.location %>
				<td><%= v.created_at %></td>
				<td>
				<%= link_to "Edit", vegetable_edit_path(:vegetable_id => v.id)%> |
